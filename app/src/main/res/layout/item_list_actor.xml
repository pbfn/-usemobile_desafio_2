<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/light_gray"
    >

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/image_view_actor"
        android:layout_width="103dp"
        android:layout_height="103dp"
        android:src="@drawable/img_auxiliar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        style="@style/text_view_name_actor"
        android:id="@+id/text_view_name_actor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/pedro_bruno"
        android:paddingBottom="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image_view_actor" />

</androidx.constraintlayout.widget.ConstraintLayout>